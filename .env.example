# Database Configuration
# ЗАМЕНИТЕ на ваш публичный Railway DATABASE_URL
DATABASE_URL=postgresql://username:password@host:port/database_name

# Django Settings
SECRET_KEY=django-insecure-your-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,.railway.app

# Site Configuration
SITE_ID=1

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password_here
DEFAULT_FROM_EMAIL=your_email@gmail.com
BOOKING_NOTIFICATION_EMAIL=your_notification_email@gmail.com
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Social Auth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
YANDEX_CLIENT_ID=your_yandex_client_id_here
YANDEX_CLIENT_SECRET=your_yandex_client_secret_here

# Security (для локальной разработки)
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False
